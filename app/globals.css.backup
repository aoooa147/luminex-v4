@tailwind base;

@tailwind components;

@tailwind utilities;



/* ðŸŽ¬ TRON-INSPIRED THEME ðŸŽ¬ */



:root {

  /* Safe areas */

  --safe-top: env(safe-area-inset-top, 0px);

  --safe-right: env(safe-area-inset-right, 0px);

  --safe-bottom: env(safe-area-inset-bottom, 0px);

  --safe-left: env(safe-area-inset-left, 0px);

  --minikit-gap: 84px;



  /* ðŸŽ¨ Tron Color Palette */

  --tron-cyan: #00e5ff;

  --tron-cyan-dark: #00a8cc;

  --tron-blue: #0066ff;

  --tron-blue-dark: #003d99;

  --tron-orange: #ff6b35;

  --tron-orange-dark: #cc4420;

  --tron-purple: #a855f7;

  --tron-pink: #ec4899;

  

  /* Background colors */

  --bg-primary: #000000;

  --bg-secondary: #0a0a0f;

  --bg-tertiary: #0f0f1a;

  --bg-card: rgba(10, 10, 20, 0.8);

  

  /* Grid colors */

  --grid-color: rgba(0, 229, 255, 0.15);

  --grid-glow: rgba(0, 229, 255, 0.3);

  

  /* Neon glow sizes */

  --glow-sm: 0 0 5px;

  --glow-md: 0 0 10px;

  --glow-lg: 0 0 20px;

  --glow-xl: 0 0 30px;

}

/* ðŸ’  TRON ARES Shell Utilities - Retro Futuristic */
.tron-grid {
  position: absolute;
  inset: 0;
  background-image:
    linear-gradient(0deg, rgba(255, 26, 42, 0.08) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 26, 42, 0.1) 1px, transparent 1px);
  background-size: 120px 120px;
  animation: tronGridDrift 18s linear infinite;
  opacity: 0.15;
  mix-blend-mode: screen;
}

.tron-grid-secondary {
  background-size: 60px 60px;
  opacity: 0.1;
  animation-duration: 28s;
}

.tron-energy-stream {
  position: absolute;
  inset: -20%;
  background:
    radial-gradient(circle at 30% 20%, rgba(255, 26, 42, 0.4), transparent 60%),
    radial-gradient(circle at 70% 40%, rgba(255, 26, 42, 0.25), transparent 65%),
    linear-gradient(120deg, rgba(255, 26, 42, 0.2) 0%, rgba(26, 26, 26, 0.1) 100%);
  filter: blur(90px);
  opacity: 0.55;
}

.tron-fog {
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at 50% 10%, rgba(255, 255, 255, 0.12), transparent 65%);
  filter: blur(45px);
  opacity: 0.32;
}

.tron-panel-glow {
  position: absolute;
  inset: -120%;
  background: radial-gradient(circle at 50% 50%, rgba(0, 240, 255, 0.18), transparent 55%);
  filter: blur(80px);
  animation: tronPulse 12s ease-in-out infinite;
}

@keyframes tronGridDrift {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 0 120px;
  }
}

@keyframes tronPulse {
  0%, 100% {
    opacity: 0.25;
    transform: scale(1);
  }
  55% {
    opacity: 0.6;
    transform: scale(1.08);
  }
}


* {

  box-sizing: border-box;

  padding: 0;

  margin: 0;

}



/* ðŸŽ¬ Scrollbar - Tron style */

* {

  scrollbar-width: thin;

  scrollbar-color: var(--tron-cyan) transparent;

}



*::-webkit-scrollbar {

  width: 4px;

  height: 4px;

}



*::-webkit-scrollbar-track {

  background: transparent;

}



*::-webkit-scrollbar-thumb {

  background: var(--tron-cyan);

  border-radius: 2px;

  box-shadow: var(--glow-sm) var(--tron-cyan);

}



*::-webkit-scrollbar-thumb:hover {

  background: var(--tron-blue);

  box-shadow: var(--glow-md) var(--tron-blue);

}



html,

body {

  max-width: 100vw;

  overflow-x: hidden;

  overflow-y: auto;

  background: var(--bg-primary);

  color: #fff;

  height: 100%;

}



html {

  min-height: 100dvh;

  -webkit-text-size-adjust: 100%;

}



body {

  margin: 0;

  font-family: var(--font-orbitron), 'Orbitron', var(--font-exo), 'Exo 2', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;

  -webkit-font-smoothing: antialiased;

  -moz-osx-font-smoothing: grayscale;

  min-height: 100dvh;

  overflow-x: hidden;

  position: relative;

}



/* ðŸŒŒ Animated Grid Background */

body::before {

  content: '';

  position: fixed;

  top: 0;

  left: 0;

  width: 100%;

  height: 100%;

  background: 

    linear-gradient(90deg, var(--grid-color) 1px, transparent 1px),

    linear-gradient(0deg, var(--grid-color) 1px, transparent 1px);

  background-size: 50px 50px;

  background-position: 0 0;

  animation: gridScroll 20s linear infinite;

  pointer-events: none;

  z-index: 0;

  opacity: 0.3;

}



/* ðŸŒŸ Radial gradient overlay */

body::after {

  content: '';

  position: fixed;

  top: 0;

  left: 0;

  width: 100%;

  height: 100%;

  background: radial-gradient(

    ellipse at center,

    transparent 0%,

    rgba(0, 102, 255, 0.05) 50%,

    rgba(0, 0, 0, 0.8) 100%

  );

  pointer-events: none;

  z-index: 0;

}



@keyframes gridScroll {

  0% {

    background-position: 0 0;

  }

  100% {

    background-position: 50px 50px;

  }

}



a {

  color: inherit;

  text-decoration: none;

}



/* ðŸŽ¨ Tron Glass Effects */

.glass-tron {

  background: linear-gradient(

    135deg,

    rgba(0, 229, 255, 0.05) 0%,

    rgba(0, 102, 255, 0.02) 100%

  );

  backdrop-filter: blur(20px);

  border: 1px solid rgba(0, 229, 255, 0.2);

  box-shadow: 

    0 0 20px rgba(0, 229, 255, 0.1),

    inset 0 0 20px rgba(0, 229, 255, 0.05);

  position: relative;

  overflow: hidden;

}



.glass-tron::before {

  content: '';

  position: absolute;

  top: 0;

  left: -100%;

  width: 100%;

  height: 100%;

  background: linear-gradient(

    90deg,

    transparent,

    rgba(0, 229, 255, 0.1),

    transparent

  );

  animation: shine 3s infinite;

}



@keyframes shine {

  0% {

    left: -100%;

  }

  50%, 100% {

    left: 200%;

  }

}



.glass-tron-strong {

  background: linear-gradient(

    135deg,

    rgba(0, 229, 255, 0.1) 0%,

    rgba(0, 102, 255, 0.05) 100%

  );

  backdrop-filter: blur(30px);

  border: 1px solid rgba(0, 229, 255, 0.3);

  box-shadow: 

    0 0 30px rgba(0, 229, 255, 0.2),

    inset 0 0 30px rgba(0, 229, 255, 0.1);

}



/* ðŸ”· Neon Border */

.neon-border {

  border: 2px solid var(--tron-cyan);

  box-shadow: 

    0 0 10px var(--tron-cyan),

    inset 0 0 10px rgba(0, 229, 255, 0.2);

  animation: neonPulse 2s ease-in-out infinite;

}



@keyframes neonPulse {

  0%, 100% {

    box-shadow: 

      0 0 10px var(--tron-cyan),

      inset 0 0 10px rgba(0, 229, 255, 0.2);

  }

  50% {

    box-shadow: 

      0 0 20px var(--tron-cyan),

      0 0 30px var(--tron-cyan),

      inset 0 0 15px rgba(0, 229, 255, 0.3);

  }

}



/* ðŸŒŸ Neon Text */

.neon-text {

  color: var(--tron-cyan);

  text-shadow: 

    0 0 10px var(--tron-cyan),

    0 0 20px var(--tron-cyan),

    0 0 30px var(--tron-cyan);

  animation: textGlow 2s ease-in-out infinite;

}



@keyframes textGlow {

  0%, 100% {

    text-shadow: 

      0 0 10px var(--tron-cyan),

      0 0 20px var(--tron-cyan),

      0 0 30px var(--tron-cyan);

  }

  50% {

    text-shadow: 

      0 0 15px var(--tron-cyan),

      0 0 30px var(--tron-cyan),

      0 0 40px var(--tron-cyan),

      0 0 50px var(--tron-cyan);

  }

}



.neon-text-orange {

  color: var(--tron-orange);

  text-shadow: 

    0 0 10px var(--tron-orange),

    0 0 20px var(--tron-orange);

}



.neon-text-purple {

  color: var(--tron-purple);

  text-shadow: 

    0 0 10px var(--tron-purple),

    0 0 20px var(--tron-purple);

}



/* ðŸŽ¯ Neon Button */

.neon-button {

  position: relative;

  background: linear-gradient(

    135deg,

    rgba(0, 229, 255, 0.2) 0%,

    rgba(0, 102, 255, 0.2) 100%

  );

  border: 2px solid var(--tron-cyan);

  color: var(--tron-cyan);

  padding: 12px 32px;

  border-radius: 8px;

  font-weight: 600;

  text-transform: uppercase;

  letter-spacing: 2px;

  cursor: pointer;

  overflow: hidden;

  transition: all 0.3s ease;

  box-shadow: 

    0 0 20px rgba(0, 229, 255, 0.3),

    inset 0 0 20px rgba(0, 229, 255, 0.1);

}



.neon-button::before {

  content: '';

  position: absolute;

  top: 50%;

  left: 50%;

  width: 0;

  height: 0;

  border-radius: 50%;

  background: rgba(0, 229, 255, 0.5);

  transform: translate(-50%, -50%);

  transition: width 0.6s, height 0.6s;

}



.neon-button:hover {

  background: linear-gradient(

    135deg,

    rgba(0, 229, 255, 0.3) 0%,

    rgba(0, 102, 255, 0.3) 100%

  );

  transform: translateY(-2px);

  box-shadow: 

    0 0 30px rgba(0, 229, 255, 0.5),

    0 5px 20px rgba(0, 0, 0, 0.5),

    inset 0 0 30px rgba(0, 229, 255, 0.2);

}



.neon-button:hover::before {

  width: 300px;

  height: 300px;

}



.neon-button:active {

  transform: translateY(0);

}



/* ðŸŽ® Neon Card */

.neon-card {

  position: relative;

  background: linear-gradient(

    135deg,

    rgba(10, 10, 20, 0.9) 0%,

    rgba(15, 15, 30, 0.9) 100%

  );

  backdrop-filter: blur(20px);

  border: 1px solid rgba(0, 229, 255, 0.3);

  border-radius: 16px;

  padding: 24px;

  overflow: hidden;

  transition: all 0.3s ease;

  box-shadow: 

    0 4px 20px rgba(0, 0, 0, 0.5),

    0 0 40px rgba(0, 229, 255, 0.1),

    inset 0 0 40px rgba(0, 229, 255, 0.05);

}



.neon-card::before {

  content: '';

  position: absolute;

  top: 0;

  left: 0;

  right: 0;

  height: 2px;

  background: linear-gradient(

    90deg,

    transparent,

    var(--tron-cyan),

    transparent

  );

  animation: borderScan 3s linear infinite;

}



@keyframes borderScan {

  0% {

    transform: translateX(-100%);

  }

  100% {

    transform: translateX(100%);

  }

}



.neon-card:hover {

  transform: translateY(-4px);

  border-color: rgba(0, 229, 255, 0.5);

  box-shadow: 

    0 8px 30px rgba(0, 0, 0, 0.6),

    0 0 60px rgba(0, 229, 255, 0.2),

    inset 0 0 60px rgba(0, 229, 255, 0.1);

}



/* âš¡ Energy Lines */

.energy-line {

  position: relative;

  height: 2px;

  background: linear-gradient(

    90deg,

    transparent 0%,

    var(--tron-cyan) 50%,

    transparent 100%

  );

  box-shadow: 0 0 10px var(--tron-cyan);

  animation: energyFlow 2s linear infinite;

}



@keyframes energyFlow {

  0% {

    transform: translateX(-100%);

    opacity: 0;

  }

  50% {

    opacity: 1;

  }

  100% {

    transform: translateX(100%);

    opacity: 0;

  }

}



/* ðŸ’Ž Hexagon Pattern */

.hex-pattern {

  position: relative;

  overflow: hidden;

}



.hex-pattern::before {

  content: '';

  position: absolute;

  top: 0;

  left: 0;

  width: 100%;

  height: 100%;

  background-image: 

    radial-gradient(circle at 25px 25px, rgba(0, 229, 255, 0.1) 2%, transparent 0%),

    radial-gradient(circle at 75px 75px, rgba(0, 102, 255, 0.1) 2%, transparent 0%);

  background-size: 100px 100px;

  animation: hexMove 20s linear infinite;

  pointer-events: none;

}



@keyframes hexMove {

  0% {

    transform: translateY(0);

  }

  100% {

    transform: translateY(100px);

  }

}



/* ðŸ”¥ Particle Effect */

.particle-effect {

  position: absolute;

  width: 100%;

  height: 100%;

  pointer-events: none;

  overflow: hidden;

}



.particle {

  position: absolute;

  width: 2px;

  height: 2px;

  background: var(--tron-cyan);

  border-radius: 50%;

  box-shadow: 0 0 10px var(--tron-cyan);

  animation: particleFloat 3s linear infinite;

}



@keyframes particleFloat {

  0% {

    transform: translateY(100vh) translateX(0);

    opacity: 0;

  }

  10% {

    opacity: 1;

  }

  90% {

    opacity: 1;

  }

  100% {

    transform: translateY(-10vh) translateX(100px);

    opacity: 0;

  }

}



/* ðŸ“Š Data Stream Effect */

@keyframes dataStream {

  0% {

    transform: translateY(-100%);

    opacity: 0;

  }

  10% {

    opacity: 1;

  }

  90% {

    opacity: 1;

  }

  100% {

    transform: translateY(100%);

    opacity: 0;

  }

}



.data-stream {

  position: absolute;

  width: 1px;

  height: 100%;

  background: linear-gradient(

    180deg,

    transparent,

    var(--tron-cyan),

    transparent

  );

  animation: dataStream 3s linear infinite;

  box-shadow: 0 0 10px var(--tron-cyan);

}



/* ðŸŽ¯ Loading Spinner - Tron Style */

.tron-spinner {

  width: 60px;

  height: 60px;

  border: 3px solid transparent;

  border-top-color: var(--tron-cyan);

  border-right-color: var(--tron-blue);

  border-radius: 50%;

  animation: tronSpin 1s linear infinite;

  box-shadow: 

    0 0 20px var(--tron-cyan),

    inset 0 0 20px var(--tron-cyan);

}



@keyframes tronSpin {

  0% {

    transform: rotate(0deg);

  }

  100% {

    transform: rotate(360deg);

  }

}



/* ðŸŒŠ Gradient Text */

.gradient-text {

  background: linear-gradient(

    135deg,

    var(--tron-cyan) 0%,

    var(--tron-blue) 50%,

    var(--tron-purple) 100%

  );

  -webkit-background-clip: text;

  -webkit-text-fill-color: transparent;

  background-clip: text;

  animation: gradientShift 3s ease infinite;

  background-size: 200% 200%;

}



@keyframes gradientShift {

  0%, 100% {

    background-position: 0% 50%;

  }

  50% {

    background-position: 100% 50%;

  }

}



/* ðŸŽª Animations */

@keyframes fadeIn {

  from {

    opacity: 0;

    transform: translateY(20px);

  }

  to {

    opacity: 1;

    transform: translateY(0);

  }

}



.animate-fadeIn {

  animation: fadeIn 0.5s ease-out;

}



@keyframes slideUp {

  from {

    transform: translateY(100%);

    opacity: 0;

  }

  to {

    transform: translateY(0);

    opacity: 1;

  }

}



.animate-slideUp {

  animation: slideUp 0.3s ease-out;

}



@keyframes slideDown {

  from {

    transform: translateY(-100%);

    opacity: 0;

  }

  to {

    transform: translateY(0);

    opacity: 1;

  }

}



.animate-slideDown {

  animation: slideDown 0.3s ease-out;

}



@keyframes zoomIn {

  from {

    transform: scale(0.8);

    opacity: 0;

  }

  to {

    transform: scale(1);

    opacity: 1;

  }

}



.animate-zoomIn {

  animation: zoomIn 0.3s ease-out;

}



/* ðŸŽ¨ Skeleton Loading - Tron Style */

@keyframes tronShimmer {

  0% {

    background-position: -1000px 0;

  }

  100% {

    background-position: 1000px 0;

  }

}



.skeleton-tron {

  background: linear-gradient(

    90deg,

    rgba(0, 229, 255, 0.05) 0%,

    rgba(0, 229, 255, 0.15) 50%,

    rgba(0, 229, 255, 0.05) 100%

  );

  background-size: 1000px 100%;

  animation: tronShimmer 2s infinite;

  border: 1px solid rgba(0, 229, 255, 0.1);

}



/* ðŸŽ¯ Tab Navigation - Tron Style */

.tab-tron {

  position: relative;

  padding: 12px 24px;

  color: rgba(0, 229, 255, 0.6);

  border-bottom: 2px solid transparent;

  transition: all 0.3s ease;

}



.tab-tron:hover {

  color: var(--tron-cyan);

  text-shadow: 0 0 10px var(--tron-cyan);

}



.tab-tron.active {

  color: var(--tron-cyan);

  border-bottom-color: var(--tron-cyan);

  text-shadow: 0 0 10px var(--tron-cyan);

  box-shadow: 0 2px 10px var(--tron-cyan);

}



/* ðŸŽ® Input Fields - Tron Style */

.input-tron {

  background: rgba(10, 10, 20, 0.8);

  border: 2px solid rgba(0, 229, 255, 0.3);

  color: var(--tron-cyan);

  padding: 12px 16px;

  border-radius: 8px;

  outline: none;

  transition: all 0.3s ease;

  font-family: 'Orbitron', monospace;

}



.input-tron:focus {

  border-color: var(--tron-cyan);

  box-shadow: 

    0 0 20px rgba(0, 229, 255, 0.3),

    inset 0 0 20px rgba(0, 229, 255, 0.1);

}



.input-tron::placeholder {

  color: rgba(0, 229, 255, 0.4);

}



/* âš¡ Performance optimizations */

* {

  -webkit-font-smoothing: antialiased;

  -moz-osx-font-smoothing: grayscale;

}



.motion-div,

[class*="motion"],

[class*="animate"],

[class*="neon"] {

  transform: translateZ(0);

  backface-visibility: hidden;

  perspective: 1000px;

}



.backdrop-blur-xl,

.backdrop-blur-2xl {

  will-change: auto;

}



.blur-xl,

.blur-2xl,

.blur-3xl {

  will-change: auto;

  transform: translateZ(0);

}



html {

  scroll-behavior: smooth;

  -webkit-overflow-scrolling: touch;

}



/* ðŸŽ­ Reduce motion for accessibility */

@media (prefers-reduced-motion: reduce) {

  *,

  *::before,

  *::after {

    animation-duration: 0.01ms !important;

    animation-iteration-count: 1 !important;

    transition-duration: 0.01ms !important;

    scroll-behavior: auto !important;

  }

}



img {

  max-width: 100%;

  height: auto;

  display: block;

}



/* ðŸŒŸ Utility Classes */

.text-glow-cyan {

  text-shadow: 0 0 10px var(--tron-cyan);

}



.text-glow-blue {

  text-shadow: 0 0 10px var(--tron-blue);

}



.text-glow-orange {

  text-shadow: 0 0 10px var(--tron-orange);

}



.box-glow-cyan {

  box-shadow: 0 0 20px rgba(0, 229, 255, 0.5);

}



.box-glow-blue {

  box-shadow: 0 0 20px rgba(0, 102, 255, 0.5);

}



.box-glow-orange {

  box-shadow: 0 0 20px rgba(255, 107, 53, 0.5);

}
